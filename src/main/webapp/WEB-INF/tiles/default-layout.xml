<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="default" template="/WEB-INF/views/common/layout/default-main.jsp">
        <put-attribute name="title" value="AmigoServer"/>
        <put-attribute name="menu" value="/WEB-INF/views/common/layout/default-nav.jsp" />
        <put-attribute name="header" value="/WEB-INF/views/common/layout/default-header.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/views/common/layout/default-footer.jsp" />
    </definition>

    <!-- login -->
    <definition name="login" template="/WEB-INF/views/common/layout/default-login.jsp">
        <put-attribute name="title" value="AmigoServer"/>
        <put-attribute name="body" value="" />
    </definition>

    <definition name="login/*" extends="login">
        <put-attribute name="body" value="/WEB-INF/views/login/{1}.jsp" />
    </definition>

    <definition name="board/*" extends="default">
        <put-attribute name="body" value="/WEB-INF/views/board/{1}.jsp" />
    </definition>

    <definition name="resource/*" extends="default">
        <put-attribute name="body" value="/WEB-INF/views/resource/{1}.jsp" />
    </definition>

    <definition name="common/error/accessDenied" extends="default">
        <put-attribute name="body" value="/WEB-INF/views/common/error/accessDenied.jsp" />
    </definition>

</tiles-definitions>